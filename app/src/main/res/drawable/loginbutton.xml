<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>

            <gradient
                android:color="#FF4081"
                android:endColor="#FF4081"
                android:angle="270" />

            <solid
                android:color="#FF4081" />
            <stroke
                android:width="1dp"
                android:color="#FF4081" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF4081"
                android:centerColor="#FF4081"

                android:endColor="#ff3366"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF4081" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>