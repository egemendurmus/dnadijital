<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/form_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button11"
                android:background="@drawable/back_arrow" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SELECT DRY CLEANER"
                android:textColor="@color/wallet_bright_foreground_holo_light"
                android:id="@+id/textView11"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/button11"
                android:layout_toEndOf="@+id/button11"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_alignBottom="@+id/button11" />












            <fragment
                class="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/button11" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText11"
                android:drawableLeft="@drawable/street_icon"
                android:drawablePadding="3dp"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView49" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText12"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/note_icon"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView50" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save this address"
                android:id="@+id/switch1"
                android:drawableLeft="@drawable/save_this_adress"
                android:drawablePadding="5dp"
                android:textSize="15dp"
                android:layout_below="@+id/textView47"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/button10"
                android:background="@drawable/transparent_select"
                android:drawableLeft="@drawable/ev_ikon"
                android:layout_below="@+id/textView48"
                android:layout_alignLeft="@+id/textView48"
                android:layout_alignStart="@+id/textView48" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ADDRESS SETTİNGS"
                android:id="@+id/textView47"
                android:textSize="10dp"
                android:layout_alignRight="@+id/editText12"
                android:layout_alignEnd="@+id/editText12"
                android:layout_below="@+id/editText12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ADDRESS"
                android:id="@+id/textView48"
                android:textSize="10dp"
                android:layout_below="@+id/map"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="STREET / BUILDİNG NO / DOOR NO"
                android:id="@+id/textView49"
                android:layout_below="@+id/button10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ADRESS NOTES"
                android:id="@+id/textView50"
                android:layout_below="@+id/editText11"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="ADRESS NOTES"
                android:textSize="10dp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/afterswitch"
                android:layout_above="@+id/button15"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/switch1">




                <Spinner
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner"
                    android:layout_toRightOf="@+id/imageView7"
                    android:layout_toEndOf="@+id/imageView7"
                    android:layout_alignBottom="@+id/imageView7"
                    android:layout_alignTop="@+id/imageView7" />



                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set this address as primary"
                    android:id="@+id/switch2"
                    android:drawableLeft="@drawable/setting_con"
                    android:layout_below="@+id/textView54"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView7"
                    android:src="@drawable/adres_type"
                    android:layout_below="@+id/textView51"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ADDRESS TYPE"
                    android:textSize="10dp"
                    android:id="@+id/textView51"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view"
                    android:layout_below="@+id/spinner"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ADDRESS NAME"
                    android:id="@+id/textView52"
                    android:transitionName="10"
                    android:paddingTop="2dp"
                    android:layout_below="@+id/view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView53"
                    android:drawableLeft="@drawable/adres_name"
                    android:drawablePadding="6dp"
                    android:text="your address"
                    android:layout_below="@+id/textView52"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view2"
                    android:layout_below="@+id/textView53"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ADDRESS SETTINGS"
                    android:id="@+id/textView54"
                    android:textSize="10dp"
                    android:layout_below="@+id/textView53"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />









            </RelativeLayout>






        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APPLY"
        android:id="@+id/button15"
        android:background="@drawable/loginbutton"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"

        />

</RelativeLayout>